<Page
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
  d:DesignWidth="1920"
  d:DesignHeight="1080" xmlns:noesis="clr-namespace:NoesisGUIExtensions">
  <Grid>
    <ProgressBar x:Name="HPProgressBar" HorizontalAlignment="Center" VerticalAlignment="Top" Width="600" Height="40" RenderTransformOrigin="0.5,0.5" Value="{Binding Path=CurrentHP}" Maximum="{Binding Path=MaxHP}" Template="{DynamicResource Progress_Bar_1_Template}" Background="{x:Null}" Foreground="{x:Null}">
      <ProgressBar.Resources>
        <ResourceDictionary>
          <ControlTemplate x:Key="Progress_Bar_1_Template" TargetType="ProgressBar">
            <Grid>
              <Border x:Name="PART_Track">
                <Border.Background>
                  <ImageBrush ImageSource="Sprites/Slider_BasicTrapezoid01_Fill_Red.png"/>
                </Border.Background>
              </Border>
              <Border x:Name="PART_Indicator" HorizontalAlignment="Left">
                <Border.Background>
                  <ImageBrush ImageSource="Sprites/Slider_BasicTrapezoid01_Fill_Green.png"/>
                </Border.Background>
              </Border>
            </Grid>
          </ControlTemplate>
        </ResourceDictionary>
      </ProgressBar.Resources>
      <ProgressBar.RenderTransform>
        <TransformGroup>
          <ScaleTransform/>
          <SkewTransform/>
          <RotateTransform/>
          <TranslateTransform Y="15"/>
        </TransformGroup>
      </ProgressBar.RenderTransform>
    </ProgressBar>
    <TextBlock x:Name="HPText" TextWrapping="Wrap" Text="{Binding Path=HPText}" Width="600" Height="40" VerticalAlignment="Top" HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5" TextAlignment="Center" FontSize="25" FontFamily="Tahoma" FontStyle="Italic" LineHeight="0">
      <TextBlock.Effect>
        <DropShadowEffect Opacity="0.699"/>
      </TextBlock.Effect>
      <TextBlock.RenderTransform>
        <TransformGroup>
          <ScaleTransform/>
          <SkewTransform/>
          <RotateTransform/>
          <TranslateTransform Y="20"/>
        </TransformGroup>
      </TextBlock.RenderTransform>
    </TextBlock>
    <Image x:Name="HPIcon" VerticalAlignment="Top" HorizontalAlignment="Center" Width="48" Height="48" RenderTransformOrigin="0.5,0.5" Source="Sprites/Icon_Heart.png">
      <Image.RenderTransform>
        <TransformGroup>
          <ScaleTransform/>
          <SkewTransform/>
          <RotateTransform/>
          <TranslateTransform Y="11" X="-340"/>
        </TransformGroup>
      </Image.RenderTransform>
    </Image>
    <Image x:Name="MeleeIcon" Width="64" Height="64" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Source="Sprites/Icon_Sword.png">
      <Image.RenderTransform>
        <TransformGroup>
          <ScaleTransform/>
          <SkewTransform/>
          <RotateTransform/>
          <TranslateTransform X="24" Y="250"/>
        </TransformGroup>
      </Image.RenderTransform>
    </Image>
    <TextBlock x:Name="MeleeLevel" TextWrapping="Wrap" Text="{Binding Path=MeleeLevel}" Width="100" Height="64" FontFamily="Franklin Gothic" FontSize="30" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
      <TextBlock.RenderTransform>
        <TransformGroup>
          <ScaleTransform/>
          <SkewTransform/>
          <RotateTransform/>
          <TranslateTransform X="100" Y="260"/>
        </TransformGroup>
      </TextBlock.RenderTransform>
    </TextBlock>
    <Image x:Name="RangedIcon" Width="64" Height="64" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Source="Sprites/Icon_Target.png">
      <Image.RenderTransform>
        <TransformGroup>
          <ScaleTransform/>
          <SkewTransform/>
          <RotateTransform/>
          <TranslateTransform X="24" Y="350"/>
        </TransformGroup>
      </Image.RenderTransform>
    </Image>
    <TextBlock x:Name="RangedLevel" TextWrapping="Wrap" Text="{Binding Path=RangedLevel}" Width="100" Height="64" FontFamily="Franklin Gothic" FontSize="30" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
      <TextBlock.RenderTransform>
        <TransformGroup>
          <ScaleTransform/>
          <SkewTransform/>
          <RotateTransform/>
          <TranslateTransform X="100" Y="360"/>
        </TransformGroup>
      </TextBlock.RenderTransform>
    </TextBlock>
    <Image x:Name="MagicIcon" Width="64" Height="64" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Source="Sprites/Icon_Pumkin.png">
      <Image.RenderTransform>
        <TransformGroup>
          <ScaleTransform/>
          <SkewTransform/>
          <RotateTransform/>
          <TranslateTransform X="24" Y="450"/>
        </TransformGroup>
      </Image.RenderTransform>
    </Image>
    <TextBlock x:Name="MagicLevel" TextWrapping="Wrap" Text="{Binding Path=MagicLevel}" Width="100" Height="64" FontFamily="Franklin Gothic" FontSize="30" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
      <TextBlock.RenderTransform>
        <TransformGroup>
          <ScaleTransform/>
          <SkewTransform/>
          <RotateTransform/>
          <TranslateTransform X="100" Y="460"/>
        </TransformGroup>
      </TextBlock.RenderTransform>
    </TextBlock>
    <Image x:Name="DefenceIcon" Width="64" Height="64" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Source="Sprites/Icon_Shield.png">
      <Image.RenderTransform>
        <TransformGroup>
          <ScaleTransform/>
          <SkewTransform/>
          <RotateTransform/>
          <TranslateTransform X="24" Y="550"/>
        </TransformGroup>
      </Image.RenderTransform>
    </Image>
    <TextBlock x:Name="DefenceLevel" TextWrapping="Wrap" Text="{Binding Path=DefenceLevel}" Width="100" Height="64" FontFamily="Franklin Gothic" FontSize="30" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
      <TextBlock.RenderTransform>
        <TransformGroup>
          <ScaleTransform/>
          <SkewTransform/>
          <RotateTransform/>
          <TranslateTransform X="100" Y="560"/>
        </TransformGroup>
      </TextBlock.RenderTransform>
    </TextBlock>
  </Grid>
</Page>