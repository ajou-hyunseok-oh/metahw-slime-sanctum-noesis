<Page
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
  d:DesignWidth="1920"
  d:DesignHeight="1080">
  <Grid>
    <Image x:Name="WinIcon" VerticalAlignment="Top" HorizontalAlignment="Center" Width="64" Height="64" RenderTransformOrigin="0.5,0.5" Source="Sprites/Icon_Trophy.png">
      <Image.RenderTransform>
        <TransformGroup>
          <ScaleTransform/>
          <SkewTransform/>
          <RotateTransform/>
          <TranslateTransform Y="50"/>
        </TransformGroup>
      </Image.RenderTransform>
    </Image>
    <TextBlock x:Name="WinQuantity" TextWrapping="Wrap" Text="{Binding Path=BestWaves}" HorizontalAlignment="Center" VerticalAlignment="Top" Width="150" Height="50" TextAlignment="Center" FontFamily="Impact" FontSize="25" RenderTransformOrigin="0.5,0.5">
      <TextBlock.RenderTransform>
        <TransformGroup>
          <ScaleTransform/>
          <SkewTransform/>
          <RotateTransform/>
          <TranslateTransform Y="10"/>
        </TransformGroup>
      </TextBlock.RenderTransform>
    </TextBlock>
    <Image x:Name="CoinIcon" Width="48" Height="48" VerticalAlignment="Top" HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5" Source="Sprites/Icon_Golds.png">
      <Image.RenderTransform>
        <TransformGroup>
          <ScaleTransform/>
          <SkewTransform/>
          <RotateTransform/>
          <TranslateTransform X="200" Y="10"/>
        </TransformGroup>
      </Image.RenderTransform>
    </Image>
    <TextBlock x:Name="CoinQuantity" TextWrapping="Wrap" Text="{Binding Path=Coins}" Width="150" Height="50" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="20" FontFamily="Impact" RenderTransformOrigin="0.5,0.5">
      <TextBlock.RenderTransform>
        <TransformGroup>
          <ScaleTransform/>
          <SkewTransform/>
          <RotateTransform/>
          <TranslateTransform Y="22" X="315"/>
        </TransformGroup>
      </TextBlock.RenderTransform>
    </TextBlock>
    <Image x:Name="GemIcon" Width="48" Height="48" VerticalAlignment="Top" HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5" Source="Sprites/Icon_Gem03_Diamond_Green.png">
      <Image.RenderTransform>
        <TransformGroup>
          <ScaleTransform/>
          <SkewTransform/>
          <RotateTransform/>
          <TranslateTransform X="400" Y="10"/>
        </TransformGroup>
      </Image.RenderTransform>
    </Image>
    <TextBlock x:Name="GemQuantity" TextWrapping="Wrap" Text="{Binding Path=Gems}" Width="150" Height="50" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="20" FontFamily="Impact" RenderTransformOrigin="0.5,0.5">
      <TextBlock.RenderTransform>
        <TransformGroup>
          <ScaleTransform/>
          <SkewTransform/>
          <RotateTransform/>
          <TranslateTransform Y="22" X="515"/>
        </TransformGroup>
      </TextBlock.RenderTransform>
    </TextBlock>
  </Grid>
</Page>