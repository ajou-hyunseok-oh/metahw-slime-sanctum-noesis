<Component
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
  d:DesignWidth="1920"
  d:DesignHeight="1080"
  x:Name="ComponentRoot">
  <Grid Width="600" Height="600">
    <ProgressBar x:Name="HP" Width="300" Height="20" Template="{DynamicResource ControlTemplate.SlimeHUD}" Value="{Binding Path=CurrentHP}" Maximum="{Binding Path=MaxHP}">
      <ProgressBar.Resources>
        <ResourceDictionary>
          <ControlTemplate x:Key="ControlTemplate.SlimeHUD" TargetType="ProgressBar">
            <Grid>
              <Border x:Name="PART_Track">
                <Border.Background>
                  <ImageBrush ImageSource="Sprites/Slider_BasicTrapezoid01_Fill_Red.png"/>
                </Border.Background>
              </Border>
              <Border x:Name="PART_Indicator" HorizontalAlignment="Left">
                <Border.Background>
                  <ImageBrush ImageSource="Sprites/Slider_BasicTrapezoid01_Fill_Green.png"/>
                </Border.Background>
              </Border>
            </Grid>
          </ControlTemplate>
        </ResourceDictionary>
      </ProgressBar.Resources>
    </ProgressBar>
  </Grid>
</Component>