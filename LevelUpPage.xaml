<Page
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
  d:DesignWidth="1920"
  d:DesignHeight="1080">
  <Page.Background>
    <ImageBrush ImageSource="Sprites/Background_06.png"/>
  </Page.Background>
  <Grid Background="#C0000000">
    <TextBlock x:Name="Titke" TextWrapping="Wrap" Text="Level Up" VerticalAlignment="Center" HorizontalAlignment="Center" Width="800" Height="125" TextAlignment="Center" FontSize="75" RenderTransformOrigin="0.5,0.5" FontFamily="Impact">
      <TextBlock.Effect>
        <DropShadowEffect/>
      </TextBlock.Effect>
      <TextBlock.RenderTransform>
        <TransformGroup>
          <ScaleTransform/>
          <SkewTransform/>
          <RotateTransform/>
          <TranslateTransform Y="-425"/>
        </TransformGroup>
      </TextBlock.RenderTransform>
    </TextBlock>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Width="1200" Height="800" RenderTransformOrigin="0.5,0.5">
      <StackPanel.RenderTransform>
        <TransformGroup>
          <ScaleTransform/>
          <SkewTransform/>
          <RotateTransform/>
          <TranslateTransform Y="20"/>
        </TransformGroup>
      </StackPanel.RenderTransform>
      <Grid Width="400" Height="720">
        <Image x:Name="CardBG1" Source="Sprites/CardGreen.png" Width="360" Stretch="Fill"/>
        <Image x:Name="SkillIcon" Width="280" Source="Sprites/Icon_Sword.png" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" VerticalAlignment="Center">
          <Image.RenderTransform>
            <TransformGroup>
              <ScaleTransform/>
              <SkewTransform/>
              <RotateTransform/>
              <TranslateTransform Y="-80"/>
            </TransformGroup>
          </Image.RenderTransform>
        </Image>
        <TextBlock x:Name="Skill0Title" TextWrapping="Wrap" Text="Melee Lv1" Width="400" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Height="100" FontFamily="Franklin Gothic" FontSize="40" RenderTransformOrigin="0.5,0.5">
          <TextBlock.Effect>
            <DropShadowEffect/>
          </TextBlock.Effect>
          <TextBlock.RenderTransform>
            <TransformGroup>
              <ScaleTransform/>
              <SkewTransform/>
              <RotateTransform/>
              <TranslateTransform Y="-250"/>
            </TransformGroup>
          </TextBlock.RenderTransform>
        </TextBlock>
        <TextBlock x:Name="Instruction" TextWrapping="Wrap" Text="Melee Attack Level + 1" Width="360" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" FontSize="25" FontFamily="Tahoma" TextAlignment="Center">
          <TextBlock.RenderTransform>
            <TransformGroup>
              <ScaleTransform/>
              <SkewTransform/>
              <RotateTransform/>
              <TranslateTransform Y="175"/>
            </TransformGroup>
          </TextBlock.RenderTransform>
        </TextBlock>
        <TextBlock x:Name="Upgrade" TextWrapping="Wrap" Text="UPGRADE" Width="400" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Height="100" FontFamily="Franklin Gothic" FontSize="35" RenderTransformOrigin="0.5,0.5">
          <TextBlock.Effect>
            <DropShadowEffect/>
          </TextBlock.Effect>
          <TextBlock.RenderTransform>
            <TransformGroup>
              <ScaleTransform/>
              <SkewTransform/>
              <RotateTransform/>
              <TranslateTransform Y="325"/>
            </TransformGroup>
          </TextBlock.RenderTransform>
        </TextBlock>
        <Button RenderTransformOrigin="0.5,0.5" Background="{x:Null}" Foreground="{x:Null}" BorderBrush="{x:Null}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="360" Height="720">
          <Button.RenderTransform>
            <TransformGroup>
              <ScaleTransform/>
              <SkewTransform/>
              <RotateTransform/>
              <TranslateTransform/>
            </TransformGroup>
          </Button.RenderTransform>
        </Button>
      </Grid>
      <Grid Width="400" Height="720">
        <Image x:Name="CardBG2" Source="Sprites/CardPurple.png" Width="360" Stretch="Fill"/>
        <Image x:Name="SkillIcon001" Width="280" Source="Sprites/Icon_Target.png" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" VerticalAlignment="Center">
          <Image.RenderTransform>
            <TransformGroup>
              <ScaleTransform/>
              <SkewTransform/>
              <RotateTransform/>
              <TranslateTransform Y="-80"/>
            </TransformGroup>
          </Image.RenderTransform>
        </Image>
        <TextBlock x:Name="Skill0Title001" TextWrapping="Wrap" Text="Range Lv1" Width="400" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Height="100" FontFamily="Franklin Gothic" FontSize="40" RenderTransformOrigin="0.5,0.5">
          <TextBlock.Effect>
            <DropShadowEffect/>
          </TextBlock.Effect>
          <TextBlock.RenderTransform>
            <TransformGroup>
              <ScaleTransform/>
              <SkewTransform/>
              <RotateTransform/>
              <TranslateTransform Y="-250"/>
            </TransformGroup>
          </TextBlock.RenderTransform>
        </TextBlock>
        <TextBlock x:Name="Instruction001" TextWrapping="Wrap" Text="Range Attack Level + 1" Width="360" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" FontSize="25" FontFamily="Tahoma" TextAlignment="Center">
          <TextBlock.RenderTransform>
            <TransformGroup>
              <ScaleTransform/>
              <SkewTransform/>
              <RotateTransform/>
              <TranslateTransform Y="175"/>
            </TransformGroup>
          </TextBlock.RenderTransform>
        </TextBlock>
        <TextBlock x:Name="Upgrade001" TextWrapping="Wrap" Text="UPGRADE" Width="400" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Height="100" FontFamily="Franklin Gothic" FontSize="35" RenderTransformOrigin="0.5,0.5">
          <TextBlock.Effect>
            <DropShadowEffect/>
          </TextBlock.Effect>
          <TextBlock.RenderTransform>
            <TransformGroup>
              <ScaleTransform/>
              <SkewTransform/>
              <RotateTransform/>
              <TranslateTransform Y="325"/>
            </TransformGroup>
          </TextBlock.RenderTransform>
        </TextBlock>
        <Button RenderTransformOrigin="0.5,0.5" Background="{x:Null}" Foreground="{x:Null}" BorderBrush="{x:Null}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="360" Height="720">
          <Button.RenderTransform>
            <TransformGroup>
              <ScaleTransform/>
              <SkewTransform/>
              <RotateTransform/>
              <TranslateTransform/>
            </TransformGroup>
          </Button.RenderTransform>
        </Button>
      </Grid>
      <Grid Width="400" Height="720">
        <Image x:Name="CardBG3" Source="Sprites/CardBlue.png" Width="360" Stretch="Fill"/>
        <Image x:Name="SkillIcon002" Width="280" Source="Sprites/Icon_Pumkin.png" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" VerticalAlignment="Center">
          <Image.RenderTransform>
            <TransformGroup>
              <ScaleTransform/>
              <SkewTransform/>
              <RotateTransform/>
              <TranslateTransform Y="-80"/>
            </TransformGroup>
          </Image.RenderTransform>
        </Image>
        <TextBlock x:Name="Skill0Title002" TextWrapping="Wrap" Text="Magic Lv1" Width="400" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Height="100" FontFamily="Franklin Gothic" FontSize="40" RenderTransformOrigin="0.5,0.5">
          <TextBlock.Effect>
            <DropShadowEffect/>
          </TextBlock.Effect>
          <TextBlock.RenderTransform>
            <TransformGroup>
              <ScaleTransform/>
              <SkewTransform/>
              <RotateTransform/>
              <TranslateTransform Y="-250"/>
            </TransformGroup>
          </TextBlock.RenderTransform>
        </TextBlock>
        <TextBlock x:Name="Instruction002" TextWrapping="Wrap" Text="Magic Attack Level + 1" Width="360" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" FontSize="25" FontFamily="Tahoma" TextAlignment="Center">
          <TextBlock.RenderTransform>
            <TransformGroup>
              <ScaleTransform/>
              <SkewTransform/>
              <RotateTransform/>
              <TranslateTransform Y="175"/>
            </TransformGroup>
          </TextBlock.RenderTransform>
        </TextBlock>
        <TextBlock x:Name="Upgrade002" TextWrapping="Wrap" Text="UPGRADE" Width="400" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Height="100" FontFamily="Franklin Gothic" FontSize="35" RenderTransformOrigin="0.5,0.5">
          <TextBlock.Effect>
            <DropShadowEffect/>
          </TextBlock.Effect>
          <TextBlock.RenderTransform>
            <TransformGroup>
              <ScaleTransform/>
              <SkewTransform/>
              <RotateTransform/>
              <TranslateTransform Y="325"/>
            </TransformGroup>
          </TextBlock.RenderTransform>
        </TextBlock>
        <Button RenderTransformOrigin="0.5,0.5" Background="{x:Null}" Foreground="{x:Null}" BorderBrush="{x:Null}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="360" Height="720">
          <Button.RenderTransform>
            <TransformGroup>
              <ScaleTransform/>
              <SkewTransform/>
              <RotateTransform/>
              <TranslateTransform/>
            </TransformGroup>
          </Button.RenderTransform>
        </Button>
      </Grid>
    </StackPanel>
  </Grid>
</Page>